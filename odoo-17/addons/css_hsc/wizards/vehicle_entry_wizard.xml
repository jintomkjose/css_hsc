<?xml version="1.0" encoding="utf-8"?>
<odoo>

    

  
    
    <record id="view_vehicle_entry_wizard_form" model="ir.ui.view">
        <field name="name">vehicle.entry.wizard.form</field>
        <field name="model">vehicle.entry.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Entry">
                <group>
                    <group>
                        <field name="vehicle_number_id" />
                        <field name="employee_ids" widget="many2many_tags"/>
                        </group>
                    
                </group>

                <footer>
                    <button string="Submit" type="object" name="submit_vehicle_entry"  class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>  
            </form>
        </field>
        </record>

         <record id="act_vehicle_entry_wizard" model="ir.actions.act_window">
        <field name="name">Vehicle Entry</field>
        <field name="res_model">vehicle.entry.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="css_hsc.view_vehicle_entry_wizard_form"/>
        <field name="target">new</field>
    </record>



            
</odoo>

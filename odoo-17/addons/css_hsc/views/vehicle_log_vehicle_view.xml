<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_vehicle_log_tree">
        <field name="name">vehicle.log.tree</field>
        <field name="model">vehicle.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="driver_name" />
                <field name="mobile" />
                <field name="log_type" />
                <field name="company_id" />
                <field name="entry_type" />
                <field name="vehicle_number_id" />
                <field name="state" />
                <!-- <field name="time_in" /> -->
                <!-- <field name="time_out" /> -->

            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_vehicle_log_form">
        <field name="name">vehicle.log.form</field>
        <field name="model">vehicle.log</field>

        <field name="arch" type="xml">

            <form string="Vehicle Log Form">
                <field name="log_type" invisible="1"/>
                <field name="category_search" invisible="1"/>
                <header>
                    <button name="action_checkin" type="object" string="Check In" invisible="state != 'draft'" class="btn btn-success" />
                    <button name="action_checkout" type="object" string="Check Out" invisible="state != 'checkin'" class="btn btn-danger" />
                    <button name="action_cancel" type="object" string="Cancelled" invisible="state not in ['checkin','draft']" class="btn btn-dark"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,checkin,checkout" />

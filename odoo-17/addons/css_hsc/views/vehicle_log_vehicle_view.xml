                    <group>
                        <group>
                            <field name="entry_log_category_id" domain="category_search"/>
                            <field name="company_id" options="{'no_open': True, 'no_create': True, 'no_create_edit':True}" />
                            <field name="vehicle_number_id" readonly="state != 'draft'" />
                            <field name="driver_name" required="1" readonly="state != 'draft'" />
                            <field name="mobile" readonly="state != 'draft'" />
                            <field name="purpose" readonly="state != 'draft'" />
                            <field name="accompanied_count" readonly="state != 'draft'" />
                            <!-- invisible='entry_type != "vehicle"' -->
                            <field name="remarks" required="state == 'checkout'"/>
